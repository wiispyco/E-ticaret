@model List<RestaurantViewModel>


<div class="blog_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 id="restaurantid" class="blog_taital">Kafeler & Restoranlar</h1>
                <p class="blog_text">Lezzetli yemekler sunan çeşitli kafe ve restoranları keşfedin.</p>
            </div>
        </div>
        <div class="blog_section_2">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="blog_box)">
                            <div class="blog_img">
                                @if(!string.IsNullOrWhiteSpace( item.RestaurantImgFileName))
                                {
                                    <img src="~/Files/Restaurant/@item.RestaurantImgFileName" alt="@item.RestaurantName" class="img-fluid mb-4">
                                }
                                else
                                {
                                    <img src="~/Files/noimage.jpg" alt="@item.RestaurantName" class="img-fluid mb-4">
                                } 
                            </div>
                            <h4 class="burger_text">@item.RestaurantName</h4>
                            <h6 class="date_text">Açılış - Kapanış</h6>
                            <h6 class="time_text">@item.OpeningTime - @item.ClosingTime</h6>
                            <a href="@Url.Action("RestaurantsFoods", "RestaurantFood",new {restaurantId =item.Id, restaurantName = item.RestaurantName})" class="btn btn-success" style="margin-left:100px; margin-top:4px;">Restorana Git</a>
                            <div>
                                <form id="form_@item.Id">
                                    <input id="restaurantname" type="hidden" value="@item.RestaurantName" name="" RestaurantName" />
                                    <input id="restaurantid" type="hidden" value="@item.Id" name="RestaurantId" />
                                    @* <input type="hidden" value="@item." name="RestaurantFoodPrice" /> *@
                                   @*  <input id="quantity_@item.Id" type="number" value="" name="Quantity" placeholder="Miktar" /> *@
                                    @* <button type="button" onclick="validateAndAddProduct(@item.Id);" class="btn btn-success">Restorana Git</button> *@
                                   
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

