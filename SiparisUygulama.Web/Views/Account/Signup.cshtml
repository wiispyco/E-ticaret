@model SiparisUygulama.Web.Models.Login.SignUpViewModel
@{
    ViewData["Title"] = "Sipari Uygulaması Kayıt Ol";
    Layout = "~/Views/Shared/_LayoutNoAuthorize.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sipariş Uygulaması Kayıt Ol</title>
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">



    <link href="~/template/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/template/css/style.css" rel="stylesheet" />
    <link href="~/template/css/responsive.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="icon" href="images/fevicon.png" type="image/gif" />
    <link href="~/template/css/jquery.mcustomscrollbar.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body>
    <div class="header_section header_bg">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="@Url.Action("Index", "RestaurantFood")"><img src="~/template/images/logo.png" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </nav>
        </div>
    </div>
</body>
<div class="container-fluid">
    <div class="contact_section_2">
        <div class="row">
            <div class="col-md-12">

                @if (Model.ErrorMessages != null)
                {
                    <div class="mb-3 mt-3">
                        @foreach (var item in Model.ErrorMessages)
                        {
                            <div class="alert alert-danger" role="alert">
                                @item
                            </div>
                        }
                    </div>
                }
                <div class="mail_section_1">
                    <h4 class="banner_taital ml-0">Kayıt Ol</h4>
                    <form action="@Url.Action("Signup", "Account")" method="post">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-outline mb-4">
                            <input type="text" placeholder="İsminizi giriniz" asp-for="Name" class="mail_text" />
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-outline mb-4">
                            <input type="email" placeholder="Mail adresinizi girinizl" asp-for="Mail" class="mail_text" />
                            @Html.ValidationMessageFor(m => m.Mail, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" placeholder="Şifre giriniz" asp-for="Password" class="mail_text" />
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" placeholder="Şifreyi tekrar giriniz" asp-for="ConfirmPassword" class="mail_text" />
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-outline mb-4">
                            <input type="text" placeholder="Adresinizi giriniz" asp-for="Adress" class="mail_text" />
                            @Html.ValidationMessageFor(m => m.Adress, "", new { @class = "text-danger" })
                        </div>
                        <div class="row">
                            <div class=" col-md-12 select-outline mt-3">
                                <label>Üyelik Tipi</label>
                                <select asp-for="RoleId" class=" mt-auto mail_text pt-2">
                                    <option value="">Seçiniz</option>
                                    <option value="1">Restoran Sahibi</option>
                                    <option value="2">Müşteri</option>
                                </select>
                                <br />
                                @Html.ValidationMessageFor(m => m.RoleId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- reCAPTCHA -->
                        <div class="g-recaptcha ml-0 mt-2" data-sitekey="6LcxriUqAAAAABeFTKC3E-If7so9ED7RqIfTCjmK"></div>

                        <div class="send_bt mt-4 ">
                            <button type="submit" class="btn btn-danger btn-block mb-4" value="Signup">Kayıt Ol</button>
                        </div>
                    </form>
                    <div class="">
                        <span class="">
                            Hesabınız var mı?
                            <a href="@Url.Action("Login", "Account")" style="color:darkred">Login</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/template/js/jquery.min.js"></script>
<script src="~/template/js/popper.min.js"></script>
<script src="~/template/js/bootstrap.bundle.min.js"></script>
<script src="~/template/js/jquery-3.0.0.min.js"></script>
<script src="~/template/js/plugin.js"></script>

<script src="~/template/js/jquery.mcustomscrollbar.concat.min.js"></script>
<script src="~/template/js/custom.js"></script>
